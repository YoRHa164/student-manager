<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.njupt.springmvc.settings.admin.dao.AdminDao">
	<sql id="sysadminCompleteFields">
		id,
		loginName,
		password,
		phone,
		realName,
		authorGroupId,
		createTime
	</sql>
	<select id="checkAdminAccountExists" resultType="LoginBean">
		select 
			<include refid="sysadminCompleteFields"></include>
		from 
			sysadmin
		where
			loginName=#{loginName}
		<trim prefix="and">
			<if test="password != null">
				password=#{password}
			</if>
		</trim>
	</select>
	
	<update id="updateAdminPassword">
		update
			sysadmin
		set
			password=#{password}
		where
			loginName=#{loginName}
	</update>
	<select id="queryCompleteAdminList" resultType="AdminBean">
		select 
			`admin`.id id, 
		    loginName, 
		    phone, 
		    realName, 
		    displayName, 
		    createTime 
		from 
			sysadmin `admin` 
		left join 
			authorgroup `group` 
		on 
			`admin`.authorGroupId = `group`.id
		limit
			#{startIndex}, #{limit};
	</select>
	<select id="totalCountOfCompleteAdminList" resultType="int" >
		select
			count(`admin`.id)
		from
			sysadmin `admin`
	</select>
	<delete id="deleteAdminById">
		delete from 
			sysadmin 
		where 
			id=#{id}
	</delete>
	
	<update id="updateAdminByAdminBean" parameterType="AdminBean">
		update 
			sysadmin
		<set>
			<if test="loginName != null and loginName != ''">
				loginName=#{loginName},
			</if>
			<if test="password != null and password != ''">
				password=#{password},
			</if>
			<if test="realName != null and realName != ''">
				realName=#{realName},
			</if>
			<if test="phone != null and phone != ''">
				phone=#{phone},
			</if>
			<if test="authorGroupId != null">
				authorGroupId=#{authorGroupId},
			</if>
		</set>
		where
			id=#{id}
	</update>
	<insert id="insertAdminByAdminBean" parameterType="AdminBean">
		insert into 
			sysadmin(
				`loginName`,
				`password`,
				`phone`,
				`realName`,
				`authorGroupId`,
				`createTime`
			) values(
				#{loginName},
				#{password},
				#{phone},
				#{realName},
				#{authorGroupId},
				#{createTime}
			)
	</insert>
	
	
	
	
	
	
	
</mapper>